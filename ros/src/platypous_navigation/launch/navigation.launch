<?xml version="1.0"?>
<launch>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find platypous_navigation)/params/costmap_common.yaml" command="load" ns="global_costmap" /> 
        <rosparam file="$(find platypous_navigation)/params/costmap_common.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find platypous_navigation)/params/costmap_local.yaml" command="load" />
        <rosparam file="$(find platypous_navigation)/params/costmap_global.yaml" command="load" /> 
        <rosparam file="$(find platypous_navigation)/params/local_planner.yaml" command="load" />
        <remap from="cmd_vel" to="/other/cmd_vel" />
        <remap from="odom" to="/localization/odometry/filtered" />
    </node>

</launch> 
